{
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "bash ./deploy-script.sh",
        "tsc": "tsc",
        "start": "node dist/index.js",
        "script:build": "npm run migration:run && npm run tsc",
        "vercel:build": "npm run migration:run && npm run tsc",
        "vercel:via_script": "bash ./deploy-script.sh",
        "style:fix": "prettier -w --config ./.prettierrc .",
        "prettier:check": "prettier --config ./.prettierrc .",
        "prettier:fix": "prettier -w --config ./.prettierrc .",
        "typeorm": "node -r ts-node/register ./node_modules/typeorm/cli.js -d src/data-source.ts",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert",
        "migration:gen": "npm run typeorm -- migration:generate src/migrations/AutoGenerated",
        "migration:create": "npm run typeorm -- migration:create src/migrations/NewMigration"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "pg": "^8.11.5",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.20"
    }
}
